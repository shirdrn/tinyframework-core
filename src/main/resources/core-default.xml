<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
	
	<!-- core framework configurations -->
	<property>
		<name>core.job.configuration.dir.name</name>
		<value>conf</value>
		<description></description>
	</property>
	<property>
		<name>core.job.running.mode</name>
		<value>1</value>
		<description>
			DEVELOPMENT(0) : development environment running mode
					After files are iterated, they can not be moved to 
					directory 'completed'.
			PRODUCTION(1) : production environment running mode
					After files are iterated, they should be moved to 
					directory 'completed' from directory 'waiting'.
		</description>
	</property>
	<property>
		<name>core.job.runner.class</name>
		<value>org.shirdrn.tinyframework.core.job.files.FileLineTinyJobRunner</value>
		<description></description>
	</property>
	<property>
		<name>core.job.task.classes</name>
		<value></value>
		<description>
		For example:
			org.shirdrn.tinyframework.example.tasks.DomainFilterTask,
			org.shirdrn.tinyframework.example.tasks.HomePageCrawlTask,
			org.shirdrn.tinyframework.example.tasks.KeywordsCollectionTask,
			org.shirdrn.tinyframework.example.tasks.KeywordsSplittingTask,
			org.shirdrn.tinyframework.example.tasks.PSCCTagsCollectionTask,
			org.shirdrn.tinyframework.example.tasks.PPDCTagsCollectionTask,
			org.shirdrn.tinyframework.example.tasks.TrafficRankCollectionTask,
			org.shirdrn.tinyframework.example.tasks.PotentialClientDecisionTask
		</description>
	</property>
	
	<!-- basic component configurations -->
	<property>
		<name>core.job.files.waiting.dir</name>
		<value>waiting</value>
		<description></description>
	</property>
	<property>
		<name>core.job.files.completed.dir</name>
		<value>completed</value>
		<description></description>
	</property>
	<property>
		<name>core.job.files.suffix</name>
		<value></value>
		<description></description>
	</property>
	<property>
		<name>core.job.files.charset</name>
		<value>utf-8</value>
		<description></description>
	</property>
	
	<!-- executor configurations -->
	<property>
		<name>core.job.executor.manager.class</name>
		<value>org.shirdrn.tinyframework.core.executor.SinglePoolTinyExecutorManager</value>
		<description></description>
	</property>
	<property>
		<name>core.job.executor.thread.factory.class</name>
		<value>org.shirdrn.tinyframework.core.executor.DefaultThreadFactory</value>
		<description></description>
	</property>
	<property>
		<name>core.job.executor.rejected.execution.handler.class</name>
		<value>org.shirdrn.tinyframework.core.executor.CallerScheduleIdleWorkerPolicy</value>
		<description></description>
	</property>
	<property>
		<name>core.job.executor.pool.corePoolSize</name>
		<value>1</value>
		<description></description>
	</property>
	<property>
		<name>core.job.executor.pool.maximumPoolSize</name>
		<value>1</value>
		<description></description>
	</property>
	<property>
		<name>core.job.executor.pool.keepAliveTime</name>
		<value>120000</value>
		<description></description>
	</property>
	<property>
		<name>core.job.executor.pool.workQueueSize</name>
		<value>5</value>
		<description></description>
	</property>
	<property>
		<name>core.job.executor.pool.checkIdleWorkerInterval</name>
		<value>1000</value>
		<description></description>
	</property>
	
</configuration>